/* pages/goods_list/index.wxss */

.goods_item{
  width: 100%;
  display: flex;
  align-content: center;
  justify-content: space-between;
  text-align: center;


}

.goods_item image{
  width: 250rpx;
  height: 250rpx;
  flex: 1;
  padding: 10rpx;
}

.goods_right{
  padding: 10rpx;
  flex: 2;

  display: flex;
  flex-direction: column;
  justify-content:center;
  align-content: flex-start;
}

.price{
  color: red;
  font-size: 35rpx;
  align-self: flex-start;

  margin-top: 40rpx;
  
}

.name{
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
    font-size: 30rpx;
    height: 30rpx;


}